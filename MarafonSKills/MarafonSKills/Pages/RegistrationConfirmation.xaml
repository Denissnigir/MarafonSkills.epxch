<Page x:Class="MarafonSKills.RegistrationConfirmation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MarafonSKills"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationConfirmation">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Спасибо за вашу регистрацию в качетсве бегуна!" Style="{StaticResource Header}" FontSize="32" TextWrapping="Wrap" Width="500"/>
        <TextBlock Grid.Row="1" Text="Спасибо за вашу регистрацию в качестве бегуна в Marathon Skills 2016!" FontSize="22" VerticalAlignment="Top" Margin="20" Style="{StaticResource MainText}"/>
        <TextBlock Grid.Row="2" VerticalAlignment="Top"  Text="С вами свяжутся по поводу оплаты." FontSize="22" Style="{StaticResource MainText}"/>
        <Button Grid.Row="3" Width="200" Height="35" Content="Ок" FontSize="24" VerticalAlignment="Top" Margin="10" Click="Button_Click"/>
    </Grid>
</Page>
